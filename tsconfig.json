{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ESNext",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "paths": {
      "~common": [
        "src/common"
      ],
      "~config/*": [
        "src/common/config/*"
      ],
      "~base/*": [
        "src/common/base/*"
      ],
      "~plugins": [
        "src/plugins"
      ],
      "~i18n": [
        "src/i18n"
      ],
      "~database/*": [
        "database/*"
      ],
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
}